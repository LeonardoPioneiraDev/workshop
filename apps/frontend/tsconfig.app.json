{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2022",
    "composite": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "nodenext", // Aqui é o mais seguro para tipos esm
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true
  },
  "include": ["src", "vite.config.ts", "../../tailwind.config.ts"] // Inclua o arquivo global do tailwind se necessário
}
