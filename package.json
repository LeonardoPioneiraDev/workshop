{
  "name": "workshop",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "echo 'Use: pnpm backend:dev e pnpm frontend:dev em terminais separados'",
    "backend:dev": "pnpm --filter @workshop/backend dev",
    "frontend:dev": "pnpm --filter @workshop/frontend dev",
    "build": "pnpm --filter @workshop/backend build && pnpm --filter @workshop/frontend build",
    "migrate": "node run-migration.js",
    "db:status": "node check-db.js",
    "type-check": "pnpm --filter @workshop/backend type-check && pnpm --filter @workshop/frontend type-check"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "concurrently": "^9.1.0"
  },
  "packageManager": "pnpm@9.0.0"
}
